 <div class="bg-blue-700 text-white flex p-3">
  <%= link_to   :back do%>
<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
</svg>
<%end%>
    <p class="font-bold text-xl ml-20">Add Transactions</p>
  </div>
  <%= form_with model: @transaction, method: :post, local: true, url: category_transactions_path, scope: :transaction  do |f|%>
<div class="flex flex-col w-full mt-2 gap-2"> 
<div class="field">
    <%= f.text_field :name,  autofocus: true, autocomplete: "Category", placeholder: "Transaction name", required: true %>
  </div>
  <div class="field">
    <%= f.text_field :amount,  autofocus: true, autocomplete: "amount", placeholder: "Transaction amount",  required: true %>
  </div>
   <div class="field">
    <%= f.select :groups_id, @groups.map { |group| [group.name, group.id] } , class:'p-2 mb-2' %> 
  </div>
  <div class="actions bg-blue-700 text-white p-3 w-40 flex justify-center">
    <%= f.submit "Save" %>
  </div>
</div>
<%end%>
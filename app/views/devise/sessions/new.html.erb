<div class="flex flex-col">
  <div class="bg-blue-700 text-white flex p-3 gap-5">
    <div>
      <%= link_to users_path do %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"
        />
      </svg>
      <%end%>
    </div>
    <h2 class="ml-20">Log in</h2>
  </div>
  <div class="mt-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-2">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
        placeholder: "Email", class: 'w-full h-14 border-none' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password" ,
        placeholder: "Password", class: 'w-full h-14 border-none' %>
      </div>

      <div class="actions  text-white w-full text-center mt-4">
        <%= f.submit "Log in", class: 'w-40 bg-blue-700 p-3 ' %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="flex items-center mt-3 flex-col gap-0 text-gray-500">
    <%= render "devise/shared/links" %>
  </div>
</div>
